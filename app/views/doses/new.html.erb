<h2>New Dose</h2>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.select :ingredient_id, options_for_select(@ingredients.map{ |c| [c.name, c.id] }), include_blank: true %>
  <%#= f.input :ingredient, :collection => ingredients, :selected => ingredient_id%>
  <%= f.submit "add a ingredient"%>
<% end %>
